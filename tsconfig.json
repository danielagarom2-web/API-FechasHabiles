{
  "compilerOptions": {
    "target": "es6",                  
    "module": "commonjs",             
    "rootDir": "./src",               
    "outDir": "./dist",               
    "strict": true,                   
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*", "tests"]
}
